{
  "name": "setup-variables",
  "version": "0.0.0",
  "private": true,
  "description": "Map your variables based on other keys",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "repository": "github:cobraz/setup-variables",
  "license": "MIT",
  "author": "",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build --source-map src/main.ts",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests",
    "all": "yarn  run build && yarn  run format && yarn run lint && yarn run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add dist/* && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "{.eslintrc,.releaserc.json,.tsconfig.json}": "prettier --write",
    "*.md": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "husky": "^4.3.8",
    "runtypes": "^5.0.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/faker": "^5.1.5",
    "@types/jest": "~26.0.20",
    "@types/node": "~14",
    "@typescript-eslint/eslint-plugin": "~4.14.0",
    "@typescript-eslint/parser": "~4.14.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "~7.18.0",
    "eslint-config-prettier": "~7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "~24.1.3",
    "faker": "^5.1.0",
    "jest": "~26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.4.4",
    "typescript": "^4.0.5"
  }
}